<view class="container">
  <view class="header">
    <view class="title">{{title}}</view>
    <view class="subtitle">每月还款计划详情</view>
  </view>
  <view class="table">
    <view class="thead">
      <view class="tr">
        <view class="th col-period">期数</view>
        <view class="th col-principal">月供本金</view>
        <view class="th col-interest">月供利息</view>
        <view class="th col-total">月供总额</view>
        <view class="th col-remaining">剩余本金</view>
      </view>
    </view>
    <scroll-view scroll-y class="tbody">
      <view class="tr" wx:for="{{schedule}}" wx:key="period">
        <view class="td col-period">{{item.period}}</view>
        <view class="td col-principal">{{item.principal}}</view>
        <view class="td col-interest interest">{{item.interest}}</view>
        <view class="td col-total total">{{item.total}}</view>
        <view class="td col-remaining">{{item.remaining}}</view>
      </view>
    </scroll-view>
  </view>
</view>